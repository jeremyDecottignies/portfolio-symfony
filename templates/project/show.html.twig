{% extends 'base.html.twig' %}

{% block title %}{{ project.nom }}{% endblock %}

{% block body %}
    <h1 class="mb-3">{{ project.nom }}</h1>

    {# Image du projet si dispo #}
    {% if project.image %}
        <img src="{{ asset('uploads/images/projects/' ~ project.image) }}"
             alt="{{ project.nom }}"
             class="img-fluid mb-4 rounded shadow-sm">
    {% endif %}

    <p class="text-muted">
        ID : {{ project.id }}
    </p>

    <h3>Description courte</h3>
    <p>{{ project.courteDescription|raw }}</p>

    <h3>Description détaillée</h3>
    <div>
        {{ project.description|raw }}
    </div>

    {% if project.gitUrl %}
        <p class="mt-3">
            <a href="{{ project.gitUrl }}" target="_blank" class="btn btn-dark">
                Voir le code sur GitHub
            </a>
        </p>
    {% endif %}

    <a href="{{ path('project_index') }}" class="btn btn-secondary mt-4">
        ← Retour aux projets
    </a>
{% endblock %}
