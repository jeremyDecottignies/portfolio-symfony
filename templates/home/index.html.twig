{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="text-center mb-5">
        <h1 class="mb-3">Bienvenue sur mon portfolio</h1>
        <p class="lead text-muted">
            Étudiant en BTS SIO, voici quelques-uns de mes projets en développement.
        </p>
        <a href="{{ path('project_index') }}" class="btn btn-primary btn-lg mt-3">
            Voir mes projets
        </a>
    </div>

    <h2 class="mb-3">Derniers projets</h2>
    <div class="row g-4">
        {% for project in projects %}
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ project.nom }}</h5>
                        <p class="card-text">
                            {{ project.courteDescription|striptags|slice(0, 120) ~ '...' }}
                        </p>
                        <div class="mt-auto">
                            <a href="{{ path('project_show', { id: project.id }) }}" class="btn btn-outline-primary btn-sm">
                                Voir le projet
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun projet pour l’instant.</p>
        {% endfor %}
    </div>
{% endblock %}
